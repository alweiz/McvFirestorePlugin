<Window
    x:Class="McvFirestorePlugin.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:McvFirestorePlugin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding Title}"
    Width="487.941"
    Height="583"
    d:DataContext="{d:DesignInstance local:SettingsViewModel,
                                     IsDesignTimeCreatable=True}"
    Topmost="{Binding Topmost}"
    mc:Ignorable="d">
    <Window.Resources>
        <local:NotConverter x:Key="notConverter" />
    </Window.Resources>
    <Grid Margin="0,0,0,1" Background="#F0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*" />
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="154*" />
            <ColumnDefinition Width="65*" />
            <ColumnDefinition Width="150*" />
            <ColumnDefinition Width="78*" />
        </Grid.ColumnDefinitions>
        <!--  Element treeに属さないelementにDataContextを渡すためのdummy element  -->
        <FrameworkElement
            x:Name="dummyElement"
            Grid.ColumnSpan="6"
            DataContext="{Binding}"
            Visibility="Collapsed" />
        <CheckBox
            x:Name="checkBox"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="有効"
            IsChecked="{Binding IsEnabled}" />
        <TabControl Grid.ColumnSpan="6" Margin="10,30,10,10">
            <TabItem
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Header="設定">
                <ScrollViewer
                    Height="500"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="#F0F0F0"
                    VerticalScrollBarVisibility="Visible">
                    <Grid Width="462">
                        <Label
                            Margin="10,10,0,0"
                            Padding="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Firebase プロジェクト ID" />
                        <TextBox
                            x:Name="textBox_Copy15"
                            Width="354"
                            Height="23"
                            Margin="10,31,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Text="{Binding FirebaseProjectId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="NoWrap" />
                        <Label
                            Margin="10,59,0,0"
                            Padding="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Firebase Config Json パス" />
                        <TextBox
                            x:Name="textBox_Copy16"
                            Width="354"
                            Height="23"
                            Margin="10,80,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Text="{Binding FirebaseConfigJsonPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="NoWrap" />
                        <Button
                            x:Name="button"
                            Width="37"
                            Margin="369,82,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding ShowFilePickerCommand}"
                            Content="選択" />
                        <Label
                            Margin="10,108,0,0"
                            Padding="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Firestore YouTube Live Comment Collection パス" />
                        <TextBox
                            x:Name="textBox_Copy"
                            Width="354"
                            Height="23"
                            Margin="10,129,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Text="{Binding FirestoreYouTubeLiveCommentCollectionPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="NoWrap" />
                        <Label
                            Margin="10,157,0,0"
                            Padding="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Firestore YouTube User Collection パス" />
                        <TextBox
                            x:Name="textBox_Copy1"
                            Width="354"
                            Height="23"
                            Margin="10,178,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Text="{Binding FirestoreYouTubeUserCollectionPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="NoWrap" />
                        <Label
                            Margin="10,206,0,0"
                            Padding="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Firestore YouTube Live Connected Collection パス" />
                        <TextBox
                            x:Name="textBox_Copy2"
                            Width="354"
                            Height="23"
                            Margin="10,227,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Text="{Binding FirestoreYouTubeLiveConnectedCollectionPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="NoWrap" />
                        <Label
                            Margin="10,255,0,0"
                            Padding="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Firestore YouTube Live Disconnected Collection パス" />
                        <TextBox
                            x:Name="textBox_Copy3"
                            Width="354"
                            Height="23"
                            Margin="10,276,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Text="{Binding FirestoreYouTubeLiveDisconnectedCollectionPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            TextWrapping="NoWrap" />
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
